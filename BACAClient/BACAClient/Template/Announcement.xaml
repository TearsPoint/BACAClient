<UserControl  x:Class="BACAClient.Template.Announcement" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
    xmlns:local="clr-namespace:BACAClient.Template" 
              Height="66" Width="240" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Cursor="Hand"  >
    <Grid Name="grid" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <Grid.RowDefinitions>
            <RowDefinition RowDefinition.Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Panel.Background="#FFCCCCCC">
            <TextBlock Name="name" TextBlock.Foreground="#FF333333" MaxHeight="40" HorizontalAlignment="Center" Style="{DynamicResource TextBlockStyle}" />
        </Grid>
        <Grid Grid.Row="1" Panel.Background="#FFE1E1E1">
            <TextBlock Name="time" TextBlock.TextWrapping="NoWrap" HorizontalAlignment="Center" Style="{DynamicResource TextBlockStyle}" />
        </Grid>
    </Grid>
</UserControl>
 

 
