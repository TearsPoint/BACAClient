<UserControl  x:Class="BACAClient.Template.HisDetail.Nav" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
    xmlns:local="clr-namespace:BACAClient.Template.HisDetail" 
              Cursor="Hand" HorizontalAlignment="Left" VerticalAlignment="Top" Height="65" Margin="2,0,0,0" >
    <Grid Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition RowDefinition.Height="12" />
        </Grid.RowDefinitions>
        <Border Name="Bg" Border.BorderBrush="#FF999999" Border.BorderThickness="0,0,0,2">
            <TextBlock Name="Name" HorizontalAlignment="Center" Style="{DynamicResource TextBlockStyle}" />
        </Border>
        <Grid Grid.Row="1">
            <Image Name="Arrow" Width="35" Height="12" UIElement.Visibility="Hidden" Source="pack://application:,,,/BACAClient;component/Images/Pages/Nav/HisDetail/Nav/arrow.png" />
        </Grid>
    </Grid>
</UserControl>
 

 
