<UserControl  x:Class="BACAClient.Template.HisDetail.Relational" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
    xmlns:local="clr-namespace:BACAClient.Template.HisDetail" Height="35" Width="210" Cursor="Hand" HorizontalAlignment="Left" VerticalAlignment="Top" >
    <Grid Name="grid" Panel.Background="#FFFFFFFF">
        <Border Name="Bg" Width="203" Margin="0,0,7,0" Border.BorderBrush="#FF999999" Border.BorderThickness="0,0,1,0">
            <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Name="Icon" HorizontalAlignment="Right" Width="16" Height="16" />
                <TextBlock Name="Name" TextBlock.TextWrapping="NoWrap" TextBlock.Foreground="#FF333333" Margin="5,0,0,0" Style="{DynamicResource TextBlockStyle}" />
            </WrapPanel>
        </Border>
    </Grid>
</UserControl>
 

 
